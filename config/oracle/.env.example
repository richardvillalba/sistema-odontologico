# Oracle Cloud Database Configuration
# Copiar este archivo como .env y completar con tus credenciales

# Credenciales básicas
ORACLE_USER=TU_USUARIO
ORACLE_PASSWORD=TU_PASSWORD

# Conexión
ORACLE_DSN=tu-instancia.adb.region.oraclecloud.com:1522/nombre_servicio
ORACLE_SERVICE_NAME=tu_servicio_high

# Wallet (para Oracle Cloud ATP/ADW)
ORACLE_WALLET_LOCATION=./config/oracle/wallet
ORACLE_WALLET_PASSWORD=TU_WALLET_PASSWORD
ORACLE_CONFIG_DIR=./config/oracle/wallet

# Tipo de conexión: thin o thick
ORACLE_CONNECTION_TYPE=thick

# Pool de conexiones (opcional)
ORACLE_POOL_MIN=1
ORACLE_POOL_MAX=5
ORACLE_POOL_INCREMENT=1
